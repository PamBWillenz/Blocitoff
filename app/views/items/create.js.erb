<% if @item.valid? %>
  $('.alert-success').hide();
  $('.js-items').prepend("<%= escape_javascript(render(@item)) %>");
  $('.js-items').prepend("<div class='alert alert-success'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button><%= flash[:notice] %></div>");
  $('.new-item').html("<%= escape_javascript(render partial: 'items/form', locals: { user: @user, item: @new_item }) %>");
<% else %>
  $('.new-item').prepend("<div class='alert alert-danger'><%= flash[:error] %></div>");
  $('.new-item').html("<%= escape_javascript(render partial: 'items/form', locals: { user: @user, item: @item }) %>");
<% end %>
