<div class="col-md-4">
  <div class="form-group">
    <%= form_for [@user, @user.items.build], remote: true do |f| %>
      <%= f.label :Item %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Add another Todo item" %>
  </div>
  <div class="form-group">
      <%= f.submit "Add To-Do item", class: 'btn btn-success' %>
    <% end %> 
  </div>
</div>